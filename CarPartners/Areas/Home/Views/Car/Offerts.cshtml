@model CarModel

@{
    ViewData["Title"] = "Lista samochodów";

    Layout = "~/Areas/Home/Views/Shared/_Layout.cshtml";
}

<section class="page-section portfolio" id="portfolio">
    <div class="container">

        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Lista samochodów</h2>

        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row justify-content-center">

                    <div class="col-md-6 col-lg-4 mb-5">
                        <div class="card h-100" data-toggle="modal" data-target="#portfolioModal1">
                            @if (Model.CarImage != null)
                            {
                                <a href="#"><img class="card-img-top" src="https://i.wpimg.pl/985x0/m.autokult.pl/audi-a5-3c98bc1edabcbc672e36aa0d.jpg" alt=""></a>
                            }
                            else
                            {
                                <a href="#"><img class="card-img-top" src="https://res.cloudinary.com/netcars/image/upload/v1620331855/img-placeholder_ndvgxj.png" alt=""></a>
                            }
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">@Model.Name</a>
                                </h4>
                                <h5>@Model.Cost PLN</h5>
                                <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet numquam aspernatur!</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>
                
        </div>

    </div>
</section>
