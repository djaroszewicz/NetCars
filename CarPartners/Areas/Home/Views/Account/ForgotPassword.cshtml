@model ForgotPasswordView

@{
    ViewData["Title"] = "Przypominanie hasła";
    Layout = "~/Areas/Home/Views/Shared/_Layout.cshtml";
}

<section class="page-section portfolio" id="portfolio">
    <div class="container">
        <div class="page-inner" style="margin-top:15px;">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <h4 class="card-title">Przypomnij hasło</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="login" style="background-color: white;">

                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "login-form" }))
                                    {
                                        <div class="form-group">
                                            <label for="email" class="placeholder"><b>Wprowadź Email</b></label>
                                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group form-action-d-flex mb-3">
                                            <button type="submit" class="btn btn-secondary col-md-5 float-left mt-3 mt-sm-0 fw-bold">Przypomnij hasło</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>