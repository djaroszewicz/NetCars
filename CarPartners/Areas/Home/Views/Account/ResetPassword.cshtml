@model ResetPasswordView

@{
    ViewData["Title"] = "Resetowanie hasła";
    Layout = "~/Areas/Home/Views/Shared/_Layout.cshtml";
}

<section class="page-section portfolio" id="portfolio">
    <div class="container">
        <div class="page-inner" style="margin-top:15px;">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <h4 class="card-title">Zmień hasło</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="login" style="background-color: white;">

                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "login-form" }))
                                    {
                                        <div class="form-group">
                                            <label for="password" class="placeholder"><b>Nowe hasło</b></label>
                                            <div class="position-relative">
                                                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                                                <div class="show-password">
                                                    <i class="icon-eye"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="password" class="placeholder"><b>Potwierdź nowe hasło</b></label>
                                            <div class="position-relative">
                                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                                                <div class="show-password">
                                                    <i class="icon-eye"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-action-d-flex mb-3">
                                            <button type="submit" class="btn btn-secondary col-md-5 float-right mt-3 mt-sm-0 fw-bold">Zmień hasło</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>